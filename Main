import time
from datetime import datetime

def saudacao(nome):
    hora = datetime.now().hour
    if hora < 12:
        mensagem = "Bom dia"
    elif hora < 18:
        mensagem = "Boa tarde"
    else:
        mensagem = "Boa noite"
    
    print(f"{mensagem}, {nome}! ðŸ˜„")
    time.sleep(1)

def despedida(nome):
    print(f"Foi um prazer falar com vocÃª, {nome}. AtÃ© logo! ðŸ‘‹")
    time.sleep(1)

# Executando
usuario = "Maria"
saudacao(usuario)
despedida(usuario)
